{
  "name": "@dom-native/ui",
  "type": "module",
  "version": "0.2.1",
  "description": "Minimalist, stylable, and extensible DOM UI base components based dom-native",
  "main": "dist/index.js",
  "scripts": {
    "prepack": "npm run build",
    "build": "TS_NODE_PROJECT='scripts/tsconfig.json' node --loader ts-node/esm ./scripts/cmds.ts build",
    "build-css": "./node_modules/.bin/pcss",
    "code": "npm run watch & npm run start",
    "watch": "TS_NODE_PROJECT='scripts/tsconfig.json' node --loader ts-node/esm ./scripts/cmds.ts watch",
    "sketchdev": "./node_modules/.bin/sketchdev",
    "build-demo-js": "./node_modules/.bin/rollup -c",
    "site": "ss3 cp demo/ jc-sites:dom-native/demo/ui/"
  },
  "dependencies": {
    "fs-aux": "^0.1.0",
    "pcss-cli": "^0.2.4",
    "sketchdev": "^0.7.2",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@dom-native/demo-infra": "0.0.0-internal-4",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-multi-entry": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash.debounce": "^4.0.7",
    "autoprefixer": "^10.4.7",
    "chokidar": "^3.5.3",
    "cmdrouter": "^0.3.1",
    "dom-native": "^0.10.2",
    "js-yaml": "^4.1.0",
    "lodash.debounce": "^4.0.8",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "postcss-mixins": "^9.0.3",
    "postcss-nested": "^5.0.6",
    "rollup": "^2.75.7",
    "rollup-plugin-typescript2": "^0.32.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "dom-native": "^0.10.2"
  },
  "files": [
    "src/",
    "dist/",
    "pcss/"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/dom-native/ui.git"
  },
  "keywords": [
    "web-component",
    "native",
    "ui components",
    "html5",
    "DOM",
    "DOM Centric",
    "Patterns",
    "html",
    "framework",
    "web-framework",
    "drag and drop"
  ],
  "engines": {
    "node": ">=16.2.0"
  },
  "author": "Jeremy Chone <jeremy.chone@gmail.com> (http://jeremychone.com)",
  "license": "MIT"
}
